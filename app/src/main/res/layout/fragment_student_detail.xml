<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_top_16dp">

    <ImageView
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_width_height"

        android:id="@+id/image_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_start_20dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_24sp"
            android:freezesText="true"/>
        <TextView
            android:id="@+id/id_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_24sp"
            android:freezesText="true"/>
    </LinearLayout>



</LinearLayout>
    <Button
        android:layout_marginStart="@dimen/margin_start_5dp"
        android:layout_marginEnd="@dimen/margin_end_5dp"
        android:id="@+id/fetch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/fetch_data_button"
        android:textColor="@android:color/white"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorPrimaryDark"
        />
</RelativeLayout>